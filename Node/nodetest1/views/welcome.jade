extends layout

doctype html
html
    head

    body
      block content
        .row
          .col.s12.m4
            .card.shadow.blue.lighten-5
              .card-content.black-text
                span.card-title.title Woku
                hr
                img#woku(src='/images/woku.png', alt='')
                br
                div.typed_wrap
                  span.typed
                br
                button.choice#start Let's Go!
          form#api(name="addchoices", method="post",action='/api')
            div#choices
              .col.s12.m4
                .card.shadow.blue.lighten-5
                  .card-content.black-text
                    span.card-title.title Location
                    hr
                    p Where would you like to explore?
                    input#userCity(type="text",placeholder="Ex.Boston",name="city")
                    label.form City
                    input#userState(type="text",placeholder="Ex.MA",name="state")
                    label.form State
            div#budgets
              .col.s12.m4
                .card.shadow.blue.lighten-5
                  .card-content.black-text
                    span.card-title.title Budget
                    hr
                    p What is your budget?
                    table.bordered#prices
                      tr
                        th Price Range
                        th Symbol
                      tr
                        td Under $10
                        td $
                      tr
                        td $10-$30
                        td $$
                      tr
                        td $30-60
                        td $$$
                      tr
                        td More than $60
                        td  $$$$

                    br

                    div#radio
                      input.choice(type='radio' name='pricechoice' value='1')#price1
                      label.form(for='price1') $
                      input.choice(type='radio' name='pricechoice' value='2')#price2
                      label.form(for='price2') $$
                      input.choice(type='radio' name='pricechoice' value='3')#price3
                      label.form(for='price3') $$$
                  button.choice(type='submit' name= 'done') submit






        h1= "Welcome to Woku AI!"
        p What are you looking for?
        form#hello(name="addchoice", method="post",action='/addchoice')
          button.choice(
          name='choice'
          type='submit'
          value='food') Food
        form#hello2(name="addchoice", method="post",action='/addchoice')
          button.choice(
          type='submit'
          name='choice'
          value='arts and entertainment') Arts and Entertainment

        button.choice(
        type='submit'
        onclick="if you plan to use single quotes here, use double quotes outer"
        ) Hotels and Travel
